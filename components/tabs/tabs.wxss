.container {
  display: flex;
  flex-direction: column;
  min-height: 100%; /*吸顶效果使用 position: sticky; 父元素不能写死高度100% 因为是分页加载的*/
}

.tabs {
  display: flex;
  padding: 30rpx 0;
  background-color: #fff;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 10;
  /*  height: 126rpx;
    box-sizing: border-box;*/
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-label {
  color: #888888;
  white-space: nowrap;
}

.active-tab {
  color: #333333;
  font-weight: bold;
}

.divider {
  margin-top: 10rpx;
  height: 6rpx;
  width: 50rpx;
  background-color: #f3d066;
}

.tab-panel {
  flex: 1;
  margin-top: 20rpx;
}